%section.feeds
  %h1.box-title Nyheter & diskussioner
  .box-instructions{ class: has_news? ? "" : "show"}
    %p= raw "Denna box visar nyheter, blogg- och foruminlägg från Min förvaltning och Mitt arbetsfält, baserat på vad du valt i #{link_to "Min profil", edit_user_path(current_user)}."
    %p
      Du kan dessutom lägga till fler källor under
      %em Anpassa-menyn.
    - unless has_news?
      = link_to "Välj profil", edit_user_path(current_user), class: "btn btn-default"

  - if current_user.combined_feed_stream
    %section.combined
      %ul.box-content
        = render "feeds_entries", entries: @combined_entries, category: 'combined', more_text: "Visa fler"
  - elsif has_news?
    %section.news
      %h1 Vår kommun
      %ul.box-content
        = render "feeds_entries", entries: @news_entries[0..1], category: 'news', more_text: "Visa fler nyheter för Vår kommun"

      %h1 Stadskontoret
      %ul.box-content
        = render "feeds_entries", entries: @news_entries[2..3], category: 'news', more_text: "Visa fler nyheter för Stadskontoret"

      %h1 Kommunikationsarbete
      %ul.box-content
        = render "feeds_entries", entries: @news_entries[4..5], category: 'news', more_text: "Visa fler nyheter för Kommunikationsarbete"

      %h1 Egna val
      %ul.box-content
        = render "feeds_entries", entries: @news_entries[6..7], category: 'news', more_text: "Visa fler egna val"

    %section.dialog
      %h1 Diskussioner
      %ul.box-content
        = render "feeds_entries", entries: @dialog_entries, category: 'dialog', more_text: "Visa fler diskussioner"
    %section.my_own
      %h1 Egna källor
      - if @my_own_entries.present?
        %ul.box-content
          = render "feeds_entries", entries: @my_own_entries, category: 'my_own', more_text: "Visa fler egna flöden"
      - else
        = link_to "Lägg till källor", my_own_feeds_path, class: "btn btn-default btn-sm"

  .dropdown.box-menu
    %button#feeds-menu.dropdown-toggle{ type: "button", title: "Anpassa innehållet", "data-toggle" => "dropdown" }
    %menu.dropdown-menu{ "aria-labelledby" => "feeds-menu", "aria-hidden" => true, role: "menu" }
      %li
        %a{ href: users_update_feed_stream_type_path, "data-method" => :patch }
          = "✓ " if current_user.combined_feed_stream?
          = "Visa sammanslaget"
      %li
        %a{ href: users_update_feed_stream_type_path, "data-method" => :patch }
          = "✓ " if !current_user.combined_feed_stream?
          = "Visa kategoriserat"
      %li.divider
      %li= link_to "Hantera nyhetskällor...", user_select_feeds_path('news')
      %li= link_to "Hantera diskussionskällor...", user_select_feeds_path('dialog')
      %li= link_to "Hantera egna källor...", my_own_feeds_path
      - if admin?
        %li.divider
        %li= link_to "Administrera...", feeds_path
      %li.divider
      %li.toggle-instructions= link_to "Hjälp...", root_path
