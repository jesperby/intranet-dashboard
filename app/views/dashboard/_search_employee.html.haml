%section.box#search-employee
  %h1.box-title Sök i Kontaktboken
  .box-content
    %form{ method: :get, action: users_path }
      %label{ for: "query-employee" } Sök medarbetare:
      .input-append
        %input#query-employee{ type: "text", name: :term, placeholder: "För- och/eller efternamn", "data-path" => users_path}
        %input.btn{ type: "submit", value: "Sök", name: nil }
  - if admin?
    .dropdown.box-menu.pull-right
      %a#search-employee-menu.dropdown-toggle{ "role" => "button", "data-toggle" => "dropdown", "href" => "#", "title" => "Anpassa denna box" }
        %span.icon-caret-down.icon-large
      %menu.dropdown-menu{ "aria-labelledby" => "search-employee-menu" }
        %li= link_to "Administrera...", users_path
