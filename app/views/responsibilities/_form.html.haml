= form_for @responsibility, html: { class: "form-horizontal" } do |f|
  .box-content
    - if @responsibility.errors.any?
      .warning= t 'messages.validation_errors'

    .control-group
      = f.label :name, "Namn:", class: "control-label"
      .controls
        = f.text_field :name, class: 'input-wide'
        - @responsibility.errors[:name].each do |msg|
          .help-inline.warning= "#{msg}"

    .control-group
      .controls
        = f.submit t( 'actions.save' ), class: "btn btn-primary"
        = link_to delete_icon_text, @responsibility, data: { confirm: 'Är du säker?', method: :delete }, class: "btn btn-danger"
        = link_to t('actions.cancel'), responsibilities_path, class: "btn"
