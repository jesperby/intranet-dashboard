- title "Ansvarsområden"
%section.box.index
  %h1.box-title= h1
  .box-content
    - if @responsibilities.empty?
      %p.warning Inga ansvarsområden matchade din sökning

    = render "search_form"

  - if @responsibilities.present?
    %table
      %thead
        %tr
          %th Namn
          %th
      %tbody
        - @responsibilities.each do |responsibility|
          %tr
            %td= link_to responsibility.name, edit_responsibility_path(responsibility)
            %td.delete= link_to delete_icon_text, responsibility, data: { confirm: 'Är du säker?', method: :delete }, class: "btn btn-danger btn-mini"

        %tr
          %td{ colspan: 2 }
            .actions= link_to add_icon_text, new_responsibility_path, class: "btn btn-primary"
