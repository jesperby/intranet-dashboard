- if @users.any?
  %ul.results
    - @users.each do |user|
      %li
        %div.avatar= link_to image_tag(user.avatar.url(:medium_quadrat), alt: "Profilbild"), user_path(user.username)
        .info
          %h2.name= link_to "#{user.first_name} #{user.last_name}", user_path(user.username)
          %p
            - if user.company.present?
              %span= link_to "#{user.company_short}, ", users_path(company: user.company)
            - if user.department.present?
              %span= link_to "#{user.department}, ", users_path(department: user.department)
            %span= user.email
          %p.bio= user.professional_bio

    - if @has_more
      %li.load-more
        %input.btn.btn-small{ type: "button", value: "Visa fler", "data-path" => users_path(load_more_query)}

