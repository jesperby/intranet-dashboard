- title "Kunskapsområden"
%section.box.index
  %h1.box-title= h1
  .box-content
    - if @skills.empty?
      %p.warning Inga kunskapsområden matchade din sökning

    = render "search_form"

  - if @skills.present?
    %table
      %thead
        %tr
          %th Namn
          %th
      %tbody
        - @skills.each do |skill|
          %tr
            %td= link_to skill.name, edit_skill_path(skill)
            %td.delete= link_to " #{t( 'actions.delete' )}", skill, data: { confirm: 'Är du säker?', method: :delete }, class: "btn btn-danger btn-mini icon-trash icon-large"

        %tr
          %td{ colspan: 2 }
            .actions= link_to " #{t( "messages.new_post" )}", new_skill_path, class: "btn btn-primary icon-plus"
