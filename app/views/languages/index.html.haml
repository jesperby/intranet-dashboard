- title "Språk"
%section.box.index
  %h1.box-title= h1
  %table
    %thead
      %tr
        %th Namn
        %th
    %tbody
      - @languages.each do |language|
        %tr
          %td= link_to language.name, edit_language_path(language)
          %td.delete= link_to " #{t( 'actions.delete' )}", language, data: { confirm: 'Är du säker?', method: :delete }, class: "btn btn-danger btn-mini icon-trash icon-large"

      %tr
        %td{ colspan: 2 }
          .actions= link_to " #{t( "messages.new_post" )}", new_language_path, class: "btn btn-primary icon-plus"
