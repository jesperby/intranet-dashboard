- title "Genvägar"
%section.box.index
  %h1.box-title= h1
  %table
    %thead
      %tr
        %th Namn
        %th.secondary Kategori
        %th
    %tbody
      - @shortcuts.each do |shortcut|
        %tr
          %td= link_to shortcut.name, edit_shortcut_path(shortcut)
          %td.secondary= Shortcut::CATEGORIES[shortcut.category]
          %td= link_to delete_icon_text, shortcut, data: { confirm: 'Är du säker?', method: :delete }, class: "btn btn-danger btn-mini"

      %tr
        %td{ colspan: 3 }
          .actions= link_to add_icon_text, new_shortcut_path, class: "btn btn-primary"
