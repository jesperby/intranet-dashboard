%li
  = image_tag avatar_full_url(@colleagueship.colleague.username, :tiny_quadrat)
  .text
    %h2.name= "#{@colleagueship.colleague.first_name} #{@colleagueship.colleague.last_name}"
    %p.status= @colleagueship.colleague.status_message ||= "Jag har ingen status Ã¤n!"
    - if @colleagueship.colleague.status_message_updated_at
      %p.updated_at= "#{distance_of_time_in_words_to_now( @colleagueship.colleague.status_message_updated_at ).humanize()} sen"

  %a.delete{ href: colleagueship_path(@colleagueship.id), "data-method" => "delete", "data-remote" => "true", "rel" => "nofollow" }
    %span.icon-remove
